<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_40"
        android:background="@color/blue">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/mar_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/image_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:text="机电专业配件领用情况统计月报"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_45"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_45">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="区队:"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"
                        android:padding="@dimen/mar_8"/>
                    <TextView
                        android:id="@+id/ranks"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_edit_round"
                        android:layout_marginTop="@dimen/mar_10"
                        android:layout_marginBottom="@dimen/mar_10"
                        android:gravity="center"
                        android:text="请选择"
                        android:singleLine="true"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="月度:"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/textcolor"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/mar_15"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginTop="@dimen/mar_10"
                    android:layout_marginBottom="@dimen/mar_10"
                    android:background="@drawable/bg_edit_round"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/mar_10"
                    android:layout_marginRight="@dimen/mar_10"
                    android:paddingLeft="@dimen/mar_8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/calendar"/>
                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/mar_14"
                        android:textColor="@color/textcolor" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_14"
                        android:text="至"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/mar_14"
                        android:textColor="@color/textcolor"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">
                    <Button
                        android:id="@+id/reset"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mar_28"
                        android:minWidth="0dp"
                        android:layout_marginLeft="@dimen/mar_10"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_button_gray"
                        android:text="重置"
                        android:paddingLeft="@dimen/mar_15"
                        android:paddingRight="@dimen/mar_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14"
                        android:gravity="center"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:id="@+id/query"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mar_28"
                        android:minWidth="0dp"
                        android:layout_marginLeft="@dimen/mar_20"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_button"
                        android:text="查询"
                        android:paddingLeft="@dimen/mar_15"
                        android:paddingRight="@dimen/mar_15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14"
                        android:gravity="center"
                        style="?android:attr/borderlessButtonStyle"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:textColor="@color/textcolor"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/mar_20"
            android:layout_marginRight="@dimen/mar_20"
            android:padding="@dimen/mar_5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/linecolor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_30"
            android:orientation="horizontal"
            android:background="#F2F5F9">
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="使用区域"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="物资名称"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="规格"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="单位"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="数量"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="单价"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="金额"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/linecolor"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.pmcc.warehouse.review.MyListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:divider="@color/linecolor"
                    android:dividerHeight="1sp"
                    android:visibility="gone"
                    android:listSelector="@android:color/transparent"/>
                <TextView
                    android:id="@+id/empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无数据"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/textcolor"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/mar_20"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/linecolor"/>
                <LinearLayout
                    android:id="@+id/lin_total"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/mar_35"
                    android:orientation="horizontal"
                    android:background="#F2F5F9"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="合计"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"

                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/linecolor"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
