<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/banner"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lin_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_110"
                android:gravity="center"
                android:layout_margin="@dimen/mar_30"
                android:background="@drawable/bg_scan"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码入库"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20"
                    android:layout_marginLeft="@dimen/mar_30"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_form"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mar_110"
                android:gravity="center"
                android:layout_marginLeft="@dimen/mar_30"
                android:layout_marginRight="@dimen/mar_30"
                android:background="@drawable/bg_button"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据报表"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20"
                    android:layout_marginLeft="@dimen/mar_30"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>