<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mar_40"
        android:background="@color/blue">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/mar_40"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/image_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:text="物资到货统计表"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_45"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="仓库:"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"
                android:padding="@dimen/mar_8"/>
            <TextView
                android:id="@+id/warehouse"
                android:layout_width="@dimen/mar_75"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_round"
                android:layout_marginTop="@dimen/mar_10"
                android:layout_marginBottom="@dimen/mar_10"
                android:gravity="center"
                android:text="请选择"
                android:singleLine="true"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="月度:"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/mar_15"/>

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mar_10"
                android:layout_marginBottom="@dimen/mar_10"
                android:background="@drawable/bg_edit_round"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/mar_10"
                android:paddingLeft="@dimen/mar_8">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/calendar"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="@dimen/mar_70"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/mar_14"
                    android:textColor="@color/textcolor" />

            </LinearLayout>
            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mar_28"
                android:minWidth="0dp"
                android:layout_marginLeft="@dimen/mar_10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_button_gray"
                android:text="重置"
                android:paddingLeft="@dimen/mar_10"
                android:paddingRight="@dimen/mar_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mar_28"
                android:minWidth="0dp"
                android:layout_marginLeft="@dimen/mar_10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_button"
                android:text="查询"
                android:paddingLeft="@dimen/mar_10"
                android:paddingRight="@dimen/mar_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mar_30"
            android:orientation="horizontal"
            android:background="#F2F5F9">
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="物资编码"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor" />
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="品名"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="规格"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="单位"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="计划数量"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="实际数量"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="到货比例"
                android:textSize="@dimen/text_14"
                android:textColor="@color/textcolor"/>
            <View
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/linecolor"/>
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:divider="@color/linecolor"
            android:dividerHeight="1sp"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:textSize="@dimen/text_14"
            android:textColor="@color/textcolor"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/mar_20"/>

    </LinearLayout>

</LinearLayout>
